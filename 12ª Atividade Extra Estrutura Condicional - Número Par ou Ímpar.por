programa {
  funcao inicio() {
  // Declarando as variáveis.
  inteiro numero

  // Solicitando dados ao usuário.
  escreva("Digite um número: ", numero)
  leia(numero)

  //Condição Se e Senão.
  se (numero %2 == 0){ 
    escreva ("Número é Par") 
    }senao {
      escreva ("Número é ímpar")
    }
  }
}
